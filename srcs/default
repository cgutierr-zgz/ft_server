
server {
	# Definimos el puerto [80] para nuestro localhost
	listen 80;
	listen [::]:80;
	server_name localhost;
	
	#return 301 https://$host$request_uri;
	autoindex on;
	autoindex_exact_size off;
	autoindex_localtime off;
	autoindex_format html;

	# Configuramos SSL, su certificado, clave y ubicación
	ssl on;
	ssl_certificate /etc/ssl/certs/nginx-selfsigned.crt;
	ssl_certificate_key /etc/ssl/private/nginx-selfsigned.key;

	# Definimos la carpeta raíz del servidor
	root /var/www/html;

	# Intenta mostrar un archivo/directorio, si no 404
	location / {
		try_files $uri $uri/ =404;
	}

	# Definimos el path de php
	location ~ \.php$ {
		include snippets/fastcgi-php.conf;
		fastcgi_pass unix:/run/php/php7.3-fpm.sock;
	}

	# Definimos el path de wordpress
	location /wordpress {
        try_files $uri $uri/ /wordpress/index.php?$args;
	}

	location ~ \.php$ {
			fastcgi_split_path_info ^(/wordpress)(/.*)$;
	}
}
